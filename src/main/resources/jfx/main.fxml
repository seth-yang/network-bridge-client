<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.dreamwork.tools.network.bridge.client.AppMain"
      spacing="10" stylesheets="@../css/buttons.css"
      prefHeight="400.0" prefWidth="600.0">
    <ToolBar>
        <Button styleClass="icon-button, create-button" fx:id="btnNew"/>
        <Button styleClass="icon-button, remove-button" fx:id="btnRemove"/>
        <Separator />
        <Button styleClass="icon-button, edit-button" fx:id="btnEdit"/>
        <Separator />
        <Button styleClass="icon-button, disconnected-button" fx:id="btnConnect"/>
    </ToolBar>
    <ListView fx:id="serverList" VBox.vgrow="ALWAYS"/>
</VBox>
